{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ClientInputAudio.json",
  "title": "Client Input Audio",
  "description": "Audio input message from client",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "input_audio"
    },
    "format": {
      "type": "string",
      "enum": ["wav", "pcm16", "opus"],
      "description": "Audio format"
    },
    "chunk": {
      "type": "string",
      "description": "Base64-encoded audio data chunk"
    },
    "final": {
      "type": "boolean",
      "description": "Whether this is the final chunk in the audio stream"
    }
  },
  "required": ["type", "format", "chunk", "final"],
  "additionalProperties": false
}