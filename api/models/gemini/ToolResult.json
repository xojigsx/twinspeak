{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ToolResult.json",
  "title": "Tool Result",
  "description": "Result of tool/function execution",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "tool_result"
    },
    "name": {
      "type": "string",
      "description": "Name of the tool that was executed"
    },
    "callId": {
      "type": "string",
      "description": "Unique identifier for the tool call"
    },
    "result": {
      "description": "Result data from tool execution",
      "oneOf": [
        {"type": "string"},
        {"type": "object"},
        {"type": "array"},
        {"type": "number"},
        {"type": "boolean"},
        {"type": "null"}
      ]
    }
  },
  "required": ["type", "name", "callId", "result"],
  "additionalProperties": false
}